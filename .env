# Chrome browser settings
HEADLESS=false

# Rate limiting settings (in seconds)
DELAY_BETWEEN_TWEETS=15
MAX_TWEETS_PER_SESSION=5

# Perplexity settings (wait time for response in seconds)
PERPLEXITY_WAIT_TIME=60

# Perplexity chat management (responses per chat session before starting fresh)
# This prevents long chat sessions from degrading response quality
# When limit reached, current chat tab is closed and fresh Perplexity homepage is opened
PERPLEXITY_RESPONSES_PER_CHAT=50

# Debug settings
DEBUG_MODE=false
